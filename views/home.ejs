<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <h1>Home</h1>

  <h1>URL-SHORTNER</h1>

  <div>
    <form action="/url" method="post">
      <input type="text" name="url" placeholder="Enter URL" />
      <button type="submit">Shorten</button>
    </form>

    <% if (locals.id) { %>
      <p>Shortened URL: <a href="/<%= locals.id %>">http://localhost:3000/<%= locals.id %></a></p>
    <% } %>
  </div>
  <div>
    <h1>ALL GENERATED LINKS</h1>
    <% if (locals.urls) { %>
     <table>
      <thead>
        <th>S.No</th>
        <th>shortId</th>
        <th>Redirect to</th>
        <th>Clicks</th>
      </thead>
      <tbody>
        <% urls.forEach((url,index) => { %>
          <tr>
            <td><%=index+1 %></td>
            <td><%=url.shortId %></td>
            <td><%=url.redirectURL %></td>
            <td><%=url.visitHistory.length %></td>
          </tr>
        <% }) %>

      </tbody>
     </table>
    <% } %>
  </div>

</body>
</html>